root = true

[*]
end_of_line = lf
insert_final_newline = true

[*.{js, ts, vue, json, tsx}]
charset = utf-8
indent_style = space
indent_size = 2

[*.tsx]
charset = utf-8
indent_style = space
indent_size = 2

[*.vue]
charset = utf-8
indent_style = space
indent_size = 2

[*.ts]
charset = utf-8
indent_style = space
indent_size = 2

[*.php]
charset = utf-8
indent_style = tab
indent_size = 4


[Makefile]
indent_style = tab

[*.json]
charset = utf-8
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_size = 2
